@using System.Threading.Tasks
@using IIT_2nd_Assignment_admur13.ViewModels.Gallery
@model ImageUploadViewModel
@{
    ViewData["Title"] = "Upload";
}

<h2>@ViewData["Title"].</h2>

<!-- Used ChangePassword.cshtml and just changed around in the names -->
<form method="POST" asp-action="Upload" asp-controller="Gallery" enctype="multipart/form-data" class="form-horizontal" role="form">
    <h4>Image Name</h4>
    <hr/>
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Image" class="form-control"/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Upload Image</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}